[package]
name = "pq_node"
version = "0.1.0"
edition = "2021"

[features]
default = ["dilithium"]
dilithium = ["pqcrypto-dilithium"]
falcon = ["pqcrypto-falcon"]
sphincs = ["pqcrypto-sphincsplus"]

[dependencies]
hex = "0.4"
serde = { version = "1", features = ["derive"] }
serde_json = "1"
sha2 = "0.10"
sysinfo = "0.30"
pqcrypto-traits = "0.3"

pqcrypto-dilithium = { version = "0.5", optional = true }
pqcrypto-falcon = { version = "0.3", optional = true }
pqcrypto-sphincsplus = { version = "0.3", optional = true }

[dependencies]

pqcrypto-dilithium = "0.5.0"
pqcrypto-falcon = "0.3.0"
pqcrypto-sphincsplus = "0.3.2"
pqcrypto-traits = "0.3.5"
hex = "0.4"
sha2 = "0.10"
